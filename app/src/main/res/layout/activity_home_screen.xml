<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".accueil.HomeScreenActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>


    <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="35sp"
            android:fontFamily="@font/cutive"
            android:textColor="@color/customColorBlue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20pt" />

    <Button
            android:id="@+id/button_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/counter_corner"
            android:text="@string/expenditure"
            android:layout_marginTop="50dp"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:drawableTop="@drawable/icon_new_spend"
            />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
    <Button
            android:id="@+id/button_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/counter_corner"
            android:text="@string/list"
            android:layout_marginTop="50dp"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/titre"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            android:drawableTop="@drawable/icon_spend_list"/>


    <Button
            android:id="@+id/button_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/counter_corner"
            android:text="@string/stats"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/button_1"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:drawableTop="@drawable/icon_stat"
            />

    <Button
            android:id="@+id/button_4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/counter_corner"
            android:text="@string/parameters"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/button_2"
            android:drawableTop="@drawable/icon_settings" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>

    <TextView
            android:id="@+id/endText"
            android:layout_width="120pt"
            android:layout_height="wrap_content"
            android:text="@string/quotation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            android:fontFamily="@font/cutive"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/guideline_h"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal" />

    <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/endText"
            android:textAlignment="center"
            android:gravity="center_horizontal" />


</androidx.constraintlayout.widget.ConstraintLayout>